# ClickHouse credentials
# Host where ClickHouse server is running
CLICKHOUSE_HOST=localhost
# Port for native protocol (default: 9000)
CLICKHOUSE_PORT=9000
# Database user (must have SELECT permissions)
CLICKHOUSE_USER=default
# User password (leave empty for no password)
CLICKHOUSE_PASSWORD=
# Target database name
CLICKHOUSE_DATABASE=default

# Miro API credentials
# OAuth 2.0 access token from Miro Developer Dashboard
# Format: alphanumeric string without spaces
MIRO_ACCESS_TOKEN=your_access_token_here
# Board ID from Miro board URL
# Example: if URL is https://miro.com/app/board/uXjVMnVDAPs=/
# then BOARD_ID is uXjVMnVDAPs=
# Note: Include trailing equals sign (=) if present in URL
MIRO_BOARD_ID=your_board_id_here

# Security settings
# 32-byte key for encrypting sensitive data
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=  # Используется для дополнительного шифрования чувствительных данных
